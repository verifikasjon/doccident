{
  "name": "@doccident/doccident",
  "version": "0.0.4",
  "description": "Test all the code in your markdown docs!",
  "main": "dist/doctest.js",
  "files": [
    "dist",
    "bin"
  ],
  "bin": {
    "doccident": "bin/cmd.js"
  },
  "scripts": {
    "build": "tsc",
    "lint": "eslint .",
    "test": "vitest run",
    "test:readme": "node bin/cmd.js README.md",
    "precommit": "npm run lint && npm run test && npm run test:readme",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/BillaudCipher/doccident"
  },
  "keywords": [
    "markdown",
    "test",
    "documentation"
  ],
  "contributors": [
    "Nick Johnstone",
    "Billaud Cipher <BillaudCipher@proton.me>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/BillaudCipher/doccident/issues"
  },
  "homepage": "https://github.com/BillaudCipher/doccident",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@types/node": "^22.15.17",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.24.0",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^5.8.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^14.0.2",
    "esbuild": "^0.27.2",
    "fast-glob": "^3.3.3",
    "globals": "^16.1.0"
  }
}
